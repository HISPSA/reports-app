{
  "name": "reports-app",
  "version": "1.0.0-beta.1",
  "private": true,
  "dependencies": {
    "@dhis2/d2-ui-app": "^1.0.4",
    "@dhis2/d2-ui-core": "^1.1.4",
    "@dhis2/d2-ui-header-bar": "^1.0.13",
    "d2": "^30.0.0",
    "d2-manifest": "^1.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "cucumber": "^3.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-dhis2": "^3.0.7",
    "jest-enzyme": "^4.0.2",
    "pre-commit": "^1.2.2",
    "wdio-allure-reporter": "^0.6.2",
    "wdio-cucumber-framework": "^1.0.2",
    "wdio-selenium-standalone-service": "0.0.10",
    "wdio-spec-reporter": "^0.1.4",
    "webdriverio": "^4.12.0"
  },
  "scripts": {
    "manifest": "d2-manifest package.json ./public/manifest.webapp",
    "prestart": "yarn run manifest",
    "start": "react-scripts start",
    "prebuild": "yarn run manifest",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test-e2e": "wdio ./e2e/config/wdio.conf.js",
    "eject": "react-scripts eject",
    "lint": "eslint src/",
    "validate": "yarn list",
    "deploy": "yarn run build && mvn clean deploy",
    "coverage": "yarn test -- --coverage"
  },
  "pre-commit": [
    "lint",
    "validate",
    "test"
  ],
  "manifest.webapp": {
    "name": "DHIS2 Reports App",
    "description": "DHIS2 reports App",
    "icons": {
      "48": "icon.png"
    },
    "developer": {
      "url": "https://dhis2.github.io",
      "name": "DHIS2"
    },
    "dhis2": {
      "apiVersion": "29"
    },
    "activities": {
      "dhis": {
        "href": ".."
      }
    }
  }
}
